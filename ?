#!/bin/bash

echo "##########   Bienvenido a la ayuda para los scripts personalizados  ##########"
echo "[ comando/binario  |                 Descripción                                           ]"
echo " actualizar        |  Actualiza el sistema (requiere sudo y confirmación) - Adaptado para Debian"
echo "  cpu-mode         |  Cambia la frecuencia del procesador (requiere sudo)"
echo "      Funciones:"
echo "                     '+' : Utiliza la frecuencia máxima del procesador"
echo "                           ¡¡Sobrecalentamiento, uso al 100% del ventilador!!"
echo "                     '=' : Utiliza la frecuencia que necesite en ese momento"
echo "                           Uso normal del CPU configuración por defecto"
echo "                     '-' : Utiliza la frecuencia mínima del procesador"
echo "                           Uso mínimo del CPU con 100 MHz de tolerancia"
echo "  bateria          |         Muestra el porcentaje de la batería"
echo "  brillo           |             Reduce o aumenta el brillo"
echo "  fondo            |  Pone un fondo de pantalla con 'feh', aunque incluye funciones extra"
echo "                     'f' : Establece un fondo randomizado"
echo "                     't' : Establece transparencia via picom 'picom &'"
echo "                     'a' : Establece ambos por si tu WM o DM no lo hacen automáticamente"
echo "                     'k' : Mata el proceso 'picom'"
echo "Made by Cat-Not-Furry :: https://github.com/Cat-Not-Furry"
